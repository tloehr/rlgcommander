<?xml version="1.0" encoding="UTF-8"?>

<!--
  Finite State Machine to implement
    * Respawn Agents
    * BF3 Rush
    * CoD Search & Destroy
  type of games

  https://github.com/Ankzz/easyfsm
-->

<FSM>
    <STATE id="PROLOG" type="ID">
        <MESSAGE id="START" nextState="GREEN"/>
        <MESSAGE id="INIT" nextState="PROLOG"/>
    </STATE>
    <STATE id="GREEN">
        <MESSAGE id="BTN01" nextState="RED"/>
        <MESSAGE id="TIMES_UP" nextState="DEFENDED"/>
        <MESSAGE id="INIT" nextState="PROLOG"/>
    </STATE>
    <STATE id="RED">
        <MESSAGE id="BTN01" nextState="GREEN"/>
        <MESSAGE id="TIMES_UP" nextState="CAPTURED"/>
        <MESSAGE id="INIT" nextState="PROLOG"/>
    </STATE>
    <STATE id="DEFENDED">
        <MESSAGE id="START" nextState="GREEN"/>
        <MESSAGE id="INIT" nextState="PROLOG"/>
    </STATE>
    <STATE id="CAPTURED">
        <MESSAGE id="START" nextState="GREEN"/>
        <MESSAGE id="INIT" nextState="PROLOG"/>
    </STATE>
</FSM>

