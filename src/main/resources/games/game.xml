<?xml version="1.0" encoding="UTF-8"?>

<!--
  generic FSM for all games

  https://github.com/Ankzz/easyfsm
-->

<FSM>
    <STATE id="PROLOG" type="ID">
        <MESSAGE id="prepare" nextState="TEAMS_NOT_READY"/>
        <!-- Admin shortcuts -->
        <MESSAGE id="reset" nextState="PROLOG"/>
        <MESSAGE id="ready" nextState="TEAMS_READY"/>
        <MESSAGE id="run" nextState="RUNNING"/>
    </STATE>
    <STATE id="TEAMS_NOT_READY">
        <!-- we are waiting for all teams to get ready -->
        <MESSAGE id="ready" nextState="TEAMS_READY"/>
        <!-- Admin shortcuts -->
        <MESSAGE id="run" nextState="RUNNING"/>
        <MESSAGE id="reset" nextState="PROLOG"/>
    </STATE>
    <STATE id="TEAMS_READY">
        <!--countdown then run -->
        <MESSAGE id="run" nextState="RUNNING"/>
        <!-- unless somebody is still not ready-->
<!--        <MESSAGE id="prepare" nextState="TEAMS_NOT_READY"/>-->
        <!-- Admin shortcuts -->
        <MESSAGE id="reset" nextState="PROLOG"/>
    </STATE>
    <STATE id="RUNNING">
        <!-- As we have only one button it always starts with blue. red players have to push twice.-->
        <MESSAGE id="pause" nextState="PAUSING"/>
        <MESSAGE id="in_game_event" nextState="RUNNING"/>
        <MESSAGE id="game_over" nextState="EPILOG"/>
        <!-- Admin shortcuts -->
        <MESSAGE id="reset" nextState="PROLOG"/>
    </STATE>
    <STATE id="PAUSING">
        <MESSAGE id="resume" nextState="RESUMING"/>
        <!-- Admin shortcuts -->
        <MESSAGE id="reset" nextState="PROLOG"/>
    </STATE>
    <STATE id="RESUMING">
        <MESSAGE id="continue" nextState="RUNNING"/>
        <!-- Admin shortcuts -->
        <MESSAGE id="reset" nextState="PROLOG"/>
    </STATE>
    <STATE id="EPILOG">
        <MESSAGE id="reset" nextState="PROLOG"/>
    </STATE>
</FSM>

