<?xml version="1.0" encoding="UTF-8"?>

<!--
  FSM for a Spawn Agent.
  With "teams to report in as ready" function.

  https://github.com/Ankzz/easyfsm
-->

<FSM>
    <STATE id="PROLOG" type="ID">
        <MESSAGE id="prepare" nextState="WE_ARE_PREPARING"/>
        <!-- Admin shortcuts -->
        <MESSAGE id="countdown" nextState="COUNTDOWN_RUNNING"/>
        <MESSAGE id="run" nextState="GAME_RUNNING"/>
        <MESSAGE id="reset" nextState="PROLOG"/>
    </STATE>
    <!--    we are preparing - not ready yet-->
    <STATE id="WE_ARE_PREPARING">
        <MESSAGE id="btn01" nextState="WE_ARE_READY"/>
        <!-- Admin shortcuts -->
        <MESSAGE id="countdown" nextState="COUNTDOWN_RUNNING"/>
        <MESSAGE id="run" nextState="GAME_RUNNING"/>
        <MESSAGE id="reset" nextState="PROLOG"/>
    </STATE>
    <!--    we are ready - waiting for the others -->
    <STATE id="WE_ARE_READY">
        <MESSAGE id="btn01" nextState="WE_ARE_PREPARING"/>
        <!-- Admin shortcuts -->
        <MESSAGE id="countdown" nextState="COUNTDOWN_RUNNING"/>
        <MESSAGE id="run" nextState="GAME_RUNNING"/>
        <MESSAGE id="reset" nextState="PROLOG"/>
    </STATE>
    <!--    everybody is ready - countdown -->
    <STATE id="COUNTDOWN_RUNNING">
        <MESSAGE id="btn01" nextState="WE_ARE_PREPARING"/>
        <MESSAGE id="other_team_not_ready" nextState="WE_ARE_READY"/>
        <!-- Admin shortcuts -->
        <MESSAGE id="run" nextState="GAME_RUNNING"/>
        <MESSAGE id="reset" nextState="PROLOG"/>
    </STATE>
    <!--  finally running -->
    <STATE id="GAME_RUNNING">
        <MESSAGE id="btn01" nextState="GAME_RUNNING"/>
        <MESSAGE id="game_over" nextState="EPILOG"/>
        <!-- Admin shortcuts -->
        <MESSAGE id="reset" nextState="PROLOG"/>
    </STATE>
    <!-- ENDING STATES -->
    <STATE id="EPILOG">
        <MESSAGE id="reset" nextState="PROLOG"/>
    </STATE>
</FSM>

